
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Search for a movie</h1>
      <h2>explore all its filming locations</h2>
      <div id="map", data-markers="<%= @markers.to_json %>", data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
  </div>
</div>

<%= content_for(:after_js) do %>
  <%= javascript_pack_tag 'map' %>
<% end %>
